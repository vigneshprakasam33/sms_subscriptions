<div class="row">

  <div class="large-centered small-centered columns">
<div class="panel text-center">
  <h3>Users</h3>
</div>
  <table style="width:100%" id="users_table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Phone</th>
      <th>Password</th>
      <th>Email</th>
      <th>Time zone</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
        <td><%= user.phone %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td><%= user.time_zone %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
      </div>
</div>
